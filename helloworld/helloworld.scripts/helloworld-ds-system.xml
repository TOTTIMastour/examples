<system xmlns="http://schema.paremus.com/sf/1" name="helloworld-ds-system"
	boundary="fibre" repopath="helloworld,fabric-ext,fabric,nimble-cmpn">

	<description>
		Deploys a Declarative Services based Greeting service and a CLI command.
	</description>
	<nature group="demo" />

	<!-- Declarative Services Version -->
	<system.part category="ms" name="com.example.hello.ds">
		<property name="language" value="ja" />
	</system.part>
	
	<system.part category="osgi.active.bundle" name="helloworld.cli"  >
                <contract features="(fibre.composite.com.example.hello.ds=1)" />
        </system.part>

</system>
