<system xmlns="http://schema.paremus.com/sf/1" name="DataNucleusExample" boundary="fibre"
  repopath="DataNucleus,DataNucleusDeps,fabric-ext,fabric,nimble-cmpn,nimble">

  <!-- The "application" bundle -->
  <system.part category="ms" name="com.paremus.example.datanucleus.service.ExampleComponent">
    <property name="javax.jdo.PersistenceManagerFactoryClass" value="org.datanucleus.api.jdo.JDOPersistenceManagerFactory"/>
    <property name="javax.jdo.option.ConnectionURL" value="mongodb:/DataNucleusExample"/>
  </system.part>

  <!-- The data model bundle -->
  <system.part category="osgi.active.bundle" name="com.paremus.example.datanucleus.model"/>
  <!-- The DataNucleus extender that binds is all together -->
  <system.part category="osgi.active.bundle" name="com.paremus.datanucleus.extender"/>

  <!-- This defines that we want DataNucleus with MongoDB -->
  <system.part category="osgi.active.bundle" name="org.datanucleus.store.mongodb"/>

</system>
